<div id="<%= dom_id simplo_message %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Status code:</strong>
    <%= Services::SimploServices::WspedidoService.status_codes.key(simplo_message.status_code) %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Message:</strong>
    <%= simplo_message.message %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this simplo message", simplo_message, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this simplo message', edit_simplo_message_path(simplo_message), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
